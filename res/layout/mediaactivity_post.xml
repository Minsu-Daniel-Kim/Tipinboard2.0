<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:ems="10"
        android:gravity="top"
        android:hint="메뉴얼 내용을 적어주세요."
        android:inputType="textMultiLine"
        android:minHeight="100dp"
        android:padding="20dp"
        android:textColor="#999999" >

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#3399ff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_contentPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:onClick="media"
            android:src="@drawable/btn_ic_camera_s" />

        <ImageView
            android:layout_toRightOf="@+id/imageView_contentPic"
            android:id="@+id/media_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:onClick="media"
            android:src="@drawable/btn_ic_video_s" />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/button1"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="complete"
            android:text="저장완료" />
    </RelativeLayout>

</RelativeLayout>